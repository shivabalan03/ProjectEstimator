@{
    ViewBag.Title = "Index";
}
<style>
    .vl {
        border-left: 1px solid #95a5a6;
        margin-top:50%;
        height: 500px;
        overflow-y: hidden;
    }
</style>

<div class="modal" id="projectDetails" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"> New Project Details</h4>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="alert"></div>
                <div class="col-lg-12 row">
                    <form id="addProjectForm" class="form-group">
                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                <label>Project Name</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="text" id="txtProjectName" class="form-control" placeholder="New Project Name" />
                            </div><br /><br />
                        </div>

                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                <label>Requirement Document</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="file" id="requirementDoc" class="form-control" />
                            </div><br /><br />
                        </div>

                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                <label>Admin Password</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="password" id="adminPassword" class="form-control" placeholder="Password" />
                            </div>
                        </div>
                        <br />
                        <hr />
                        <div class="col-lg-12 pull-right">
                            <input type="hidden" id="projectID" />
                            <button type="button" id="newProjectDetails" class="btn btn-sm btn-success">Submit</button>
                            <button type="button" id="close" class="btn btn-sm btn-warning" data-dismiss="modal" aria-hidden="true">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="addNewUser" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title"> New User Details</h4>
            </div>
            <!-- Modal body -->
            <div class="modal-body">
                <div id="alert"></div>
                <div class="col-lg-12 row">
                    <form id="addProjectForm" class="form-group">
                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                <label>User Employee ID</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="text" id="userEID" class="form-control" placeholder="User Employee ID" />
                            </div><br /><br />
                        </div>

                        <div class="col-lg-12">
                            <div class="col-lg-5">
                                <label>Password</label>
                            </div>
                            <div class="col-lg-7">
                                <input type="password" id="userPassword" class="form-control" placeholder="User Password" />
                            </div><br /><br />
                        </div>
                        <hr />
                        <div class="col-lg-12 pull-right">
                            <input type="hidden" id="projectID" />
                            <button type="button" id="btnaddNewUser" class="btn btn-sm btn-success">Submit</button>
                            <button type="button" id="close" class="btn btn-sm btn-warning" data-dismiss="modal" aria-hidden="true">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="col-lg-6">
        <img src="~/Content/login1.png" style="height:450px;margin-top:10%;" />
    </div>
    <div class="col-lg-1">
        <div class="vl"></div>
    </div>
    <div class="col-lg-4" style="margin-top:10%;">
        <form action="#" method="post">
            <div class="modal-header">
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" id="txtUserName" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <div class="clearfix">
                        <label>Password</label>
                    </div>
                    <input type="password" id="txtPassword" class="form-control" required="required">
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnLogin" class="btn btn-primary pull-left" value="Login">
                <input type="button" id="addUser" class="btn btn-default pull-right" value="Add User" data-toggle="modal" data-target="#addNewUser">
                <input type="button" id="addProject" class="btn btn-default pull-right" value="New Project" data-toggle='modal' data-target='#projectDetails'>
            </div>
        </form>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script src="~/Scripts/Login.js"></script>





